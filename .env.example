# Chrome DevTools MCP Environment Configuration
# Copy this file to .env and modify as needed

# Chrome debugging port
CHROME_DEBUG_PORT=9222

# Chrome window size
CHROME_WINDOW_WIDTH=1920
CHROME_WINDOW_HEIGHT=1080

# Chrome data directory (inside container)
CHROME_DATA_DIR=/tmp/chrome-data

# Additional Chrome flags (space-separated)
# Example: --disable-extensions --incognito
ADDITIONAL_CHROME_FLAGS=

# Docker container settings
CONTAINER_NAME=chrome-devtools-mcp
CONTAINER_RESTART_POLICY=unless-stopped

# Security settings
ENABLE_CORS=true
DISABLE_WEB_SECURITY=true

# Performance settings
SHARED_MEMORY_SIZE=2gb
